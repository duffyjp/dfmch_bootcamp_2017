

<h1>Books</h1>

<%= form_tag nil, method: :get do %>

    <div class="field">
      <%= label_tag 'Topics' %>
      <%= text_field_tag "topics" %>
    </div>

  <div class="field">
    <%= submit_tag "Search", class: "button" %>
  </div>

<% end %>




<table class="tablesorter">
  <thead>
    <tr>
      <th>Title</th>
      <th>Isbn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @books %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
